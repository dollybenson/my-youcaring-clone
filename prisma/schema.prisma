// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Used for Vercel Postgres
}

model Campaign {
  id          String     @id @default(cuid())
  title       String
  description String
  goal        Int        // In cents
  raised      Int        @default(0) // In cents
  imageUrl    String?
  organizer   String
  createdAt   DateTime   @default(now())
  donations   Donation[]
}

model Donation {
  id          String   @id @default(cuid())
  amount      Int      // Donation to campaign (cents)
  tip         Int      // Tip to platform (cents)
  donorName   String?
  message     String?
  campaignId  String
  campaign    Campaign @relation(fields: [campaignId], references: [id])
  createdAt   DateTime @default(now())
}
